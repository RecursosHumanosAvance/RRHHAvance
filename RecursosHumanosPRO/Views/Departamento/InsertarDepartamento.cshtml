@model RecursosHumanosPRO.Models.ViewModels.TablaDepartamento
@{
    ViewBag.Title = "Insertar Departamento";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<center><h2>@ViewBag.Title</h2></center><br />

@using (Html.BeginForm("InsertarDepartamento", "Departamento", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(d => d.NombreDepa)
                @Html.TextBoxFor(d => d.NombreDepa, " ", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.NombreDepa, null, new { @class = "danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Idempresa, "Empresa")
                @Html.DropDownList("Idempresa", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Idempresa, null, new { @class = "danger" })
            </div>
            <div style=" text-align:right;">
                <input value="Guardar" class="btn btn-primary" type="submit" />
               
            </div>
        </div>
    </div>


}
