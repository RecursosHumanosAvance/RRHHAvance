@model RecursosHumanosPRO.Models.ViewModels.TablaEmpresa
@{
    ViewBag.Title = "Editar Empresa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<center><h2>@ViewBag.Title</h2></center>
<br />
<br />
@using (Html.BeginForm("Editar", "Empresa", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-5">
            @Html.HiddenFor(d => d.IdEmpresa)
            <div class="form-group">
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Telefono)
                @Html.TextBoxFor(d => d.Telefono, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Telefono, null, new { @class = "danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Direccion)
                @Html.TextBoxFor(d => d.Direccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Direccion, null, new { @class = "danger" })
            </div>
            <div class="form-group">
                <input value="Guardar" class="btn btn-primary" type="submit" />
                @Html.ActionLink("Regresar", "Empresa")
            </div>
        </div>
    </div>


}
<br />
<br />
