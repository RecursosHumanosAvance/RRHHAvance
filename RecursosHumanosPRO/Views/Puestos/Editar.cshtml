@model RecursosHumanosPRO.Models.ViewModels.TablaPuestos
@{
    ViewBag.Title = "Editar Puesto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<center><h2>@ViewBag.Title</h2></center>

@using (Html.BeginForm("Editar", "Puestos", FormMethod.Post))
{

<div class="row">
    <div class="col-md-5">
        @Html.HiddenFor(d => d.IdPuesto)
        <div class="form-group">
            @Html.LabelFor(d => d.NombrePuesto)
            @Html.TextBoxFor(d => d.NombrePuesto, new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.NombrePuesto, null, new { @class = "danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.IdDepartamentos)
            @Html.DropDownList("IdDepartamentos", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.IdDepartamentos, null, new { @class = "danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Descripcion)
            @Html.TextBoxFor(d => d.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Descripcion, null, new { @class = "danger" })
        </div>
        <div style=" text-align:right;">
            <input value="Guardar" class="btn btn-primary" type="submit" />
        </div>
    </div>
</div>


}