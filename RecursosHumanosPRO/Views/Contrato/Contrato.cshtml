@model IEnumerable<RecursosHumanosPRO.Models.ViewModels.ListaContrato>
@{
    ViewBag.Title = "Contrato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @ViewBag.Title </h2>
<div class="row" style=" text-align:right;padding:5px;">
    <a href="~/Departamento/InsertarDepartamento" class="btn btn-primary"> Insertar nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class=" table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>salario</th>
                <th>jornada</th>
                <th>Dias descanso</th>
            </tr>
            @foreach (var elento in Model)
            {
        <tr>
            <td>@elento.IdContrato</td>
            <td>@elento.Nombre</td>
            <td>@elento.Salario </td>
            <td>@elento.JornadaLAboral</td>
            <td>@elento.DiasdeDescanso </td>
            <td>
                <a class="btn btn-default" href="~/Departamento/Editar/@elento.IdContrato">Editar</a>
                <a class="btn btn-danger" href="~/Departamento/Eliminar/@elento.IdContrato">Eliminar</a>
            </td>
        </tr>
            }

        </table>
    </div>
</div>

